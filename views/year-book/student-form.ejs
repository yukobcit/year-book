<h3> Edit Student Info</h3>

<form action="/year-book/edit<%= username ? "/"+username : "" %>" method="POST" enctype="multipart/form-data" >   
    <input type="hidden" id="student_username" name="student_username" value="<%= username %>">
    <label for="name">First Name:</label>
    <input id="fname" name="fname" type="text" 
                value="<%= student.user.firstName ? student.user.firstName : '' %>" >
    <br>
    <label for="name">Last Name:</label>
    <input id="lname" name="lname" type="text" 
               value="<%= student.user.lastName ? student.user.lastName : '' %>" >
    <br>
    <label for="name">Email:</label>
    <input id="email" name="email" type="text" 
                value="<%= student.user.email ? student.user.email : '' %>" >
    <br>
    <label for="interests">Interests(input with comma please):</label>
    <input id="interests" name="interests" type="text" 
                value="<%= student.user.interests ? student.user.interests : '' %>" >
    <br>
    <input id="photo" name="photo" type="file">
  
    <input type="checkbox" id="manager" name="manager" value="Manager">
    <label for="manager">Make as a manager</label><br>

    <button type="submit" value="Submit">Submit</button>
</form>


<%= errorMessage %>
